		</component>
		<component id="table_leg4">
			<transformation>
				<scale x="2" y="10" z="2" />
				<translate x="-6.7" y="-0.51" z="4" />
			</transformation>
			<materials>
				<material id="inherit" />
			</materials>
			<texture id="wood" length_s="0.3" length_t="3" />
			<children>
				<componentref id="cube" />
			</children>
